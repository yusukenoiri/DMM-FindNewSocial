var data = <%== @data %>;　<!--jsで使えるようdataという変数に変えている-->
var result = '<div class="datas">'
data.forEach(function(e){ <!--繰り返し処理Each-->
    var div = '<div class="data">' 
    if (e.urlToImage != null) { <!--画像がない場合は画像を非表示-->
    result += '<img src="' + e.urlToImage +'" class="image_data news-image">';　<!--画像を表示-->
    }
    result += '<a href="' + e.url +'" class="yahoo_link" target="_blank">' + e.title + '</a><br>';
    result += '<p class="time_data">' + e.publishedAt + '</p><hr class="clear">';
    div += '</div>'　
});
result += '</div>'
$('#result').html(result);